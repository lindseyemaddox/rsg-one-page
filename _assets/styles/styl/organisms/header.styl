
	nav
		background-color: $yellow
		position: fixed
		bottom: 0
		height: 0
		left: 0
		right: 0
		transition: height 300ms ease
		z-index: 10
		.inner
			position: relative
			max-width: none
			width: 100%
		&.fixed
			height: 70px
			div#logo
				background: url('/_assets/images/logo-snipe.png') no-repeat center 10px transparent
				height: 57px
				top: 0px
				left: 2%
				img
					opacity: 0
					height: 57px
					transition: all 400ms ease
			li a#top-link
				display: inline-block
			&.show
				opacity: 1
		div#logo
			position: absolute
			left: 0
		ul
			margin: 20px 0 0
			width: 100%
			position: absolute
			right: 0
			text-align: right
			li
				display: inline-block
				primary-font($font-weight-light)
				font-size: 1em
				text-transform: uppercase
				padding: 0 1%
				letter-spacing: 4px
				a
					color: $white
					text-decoration: none
					&#top-link
						display: none
				a#about-link
					padding-left: 0
				&#line
					position: absolute
					height: 3px
					bottom: -5px
					left: 0
					padding: 0
					margin: 0
					transition: all 400ms ease
				&#line::before
					content: ""
					width: calc(~'100% + 20px')
					height: 3px
					background: $pink none repeat scroll 0 0
					left: 0
					position: absolute
			a#showMenu
				display: none
