
footer
	margin-top: 112px
	position: relative
	background: url('/_assets/img/footer.jpg') repeat left top transparent
	width: 100%
	height: 540px
	.socials
		padding: 60px 0 0
		margin: 0 auto
		width: 211px
		a
			font-size: 3em
			color: $black
			margin-right: 10px
			transition: color 400ms ease
			&:hover
				color: $white
			&:last-child
				margin-right: 0
	span.icon-logo
		font-size: 12em
		color: $white
		padding-top: 90px
		text-align: center
		display: block
		margin-bottom: 18px
	p
		primary-font($font-weight-normal)
		padding: 30px 0 0
		font-size: 0.8em
		color: $black
		text-align: center
