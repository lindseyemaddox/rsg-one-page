
section#slider
	position: relative
	a.scroll
		color: $white
		display: block
		text-align: center
		text-decoration: none
		$primary-font($font-weight-bold)
		text-transform: uppercase
		letter-spacing: 5px
		font-size: 0.75em
		position: absolute
		bottom: 20px
		left: 50%
		margin-left: -70px
		&:after
			background: url('/_assets/images/arrow-down.png') no-repeat center center transparent
			width: 20px
			height: 20px
			content: ""
			display: block
			margin: 5px 0 0 45%
