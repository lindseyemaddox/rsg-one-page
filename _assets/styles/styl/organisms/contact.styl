
section#contact
	article.left
		float: left
		vertical-align: top
		width: 60%
		input
		textarea
			width: 97%
			background-color: $white
			border: 1px solid $light
			primary-font($primary-font-light)
			font-size: 0.8em
			line-height: 4.25em
			color: $black
			letter-spacing: 0.6px
			text-transform: uppercase
			padding-left: 3%
			margin-bottom: 36px
		textarea
			height: 210px
			resize: none
		button.submit
			margin-top: 48px
			float: right
			primary-font($primary-font-normal)
			font-size: 1.15em
			letter-spacing: 3px
			text-transform: uppercase
			color: $black
			padding: 10px 15px
			border: 1px solid $black
			background-color: transparent
			text-decoration: none
			transition: color 400ms ease
			&:hover
				background-color: $black
				color: $white
	article.right
		float: right
		vertical-align: top
		width: 29%
		margin-left: 10%
		h4
			secondary-font()
			font-size: 1.25em
			color: $pink
			text-align: left
			letter-spacing: 0.1px
			text-transform: uppercase
			margin-top: 0px
			padding-top: 0px
			&:after
				border-bottom: none
				margin: 0
		p
			primary-font($primary-font-light)
			font-size: 1em
			line-height: 1.25em
			padding: 17px 0
			span
				display: block
				a
					color: $black
					text-decoration: none
					&:hover
						color: $pink
						transition: color 400ms ease
.g-recaptcha div
	width: 100%
	div
		width: 100%!important
		iframe
			float: right
